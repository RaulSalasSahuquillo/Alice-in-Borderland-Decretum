<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <VideoView
        android:id="@+id/videoIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCardGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        android:visibility="gone">

        <View
            android:id="@+id/areaRival"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            android:background="#33FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layoutRivalCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/areaRival"
            app:layout_constraintBottom_toBottomOf="@id/areaRival"
            app:layout_constraintStart_toStartOf="@id/areaRival"
            app:layout_constraintEnd_toEndOf="@id/areaRival">

            <ImageView android:id="@+id/ivRival1" android:layout_width="70dp" android:layout_height="100dp" android:layout_margin="5dp" android:src="@drawable/reverso" />
            <ImageView android:id="@+id/ivRival2" android:layout_width="70dp" android:layout_height="100dp" android:layout_margin="5dp" android:src="@drawable/reverso" />
            <ImageView android:id="@+id/ivRival3" android:layout_width="70dp" android:layout_height="100dp" android:layout_margin="5dp" android:src="@drawable/reverso" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/areaRival"
            app:layout_constraintBottom_toTopOf="@+id/areaJugador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginEnd="20dp"
                android:background="#44000000">
                <ImageView
                    android:id="@+id/ivMontoCoger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/reverso"
                    android:padding="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="#44000000">
                <ImageView
                    android:id="@+id/ivMontoDescarte"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:scaleType="fitCenter"/>
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/areaJugador"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:background="#33000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layoutPlayerCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/areaJugador"
            app:layout_constraintBottom_toBottomOf="@id/areaJugador"
            app:layout_constraintStart_toStartOf="@id/areaJugador"
            app:layout_constraintEnd_toEndOf="@id/areaJugador">

            <ImageView android:id="@+id/ivPlayer1" android:layout_width="85dp" android:layout_height="120dp" android:layout_margin="8dp" android:elevation="4dp" />
            <ImageView android:id="@+id/ivPlayer2" android:layout_width="85dp" android:layout_height="120dp" android:layout_margin="8dp" android:elevation="4dp" />
            <ImageView android:id="@+id/ivPlayer3" android:layout_width="85dp" android:layout_height="120dp" android:layout_margin="8dp" android:elevation="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatusInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TU TURNO"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/areaJugador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>